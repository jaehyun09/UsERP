<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace = "com.project.UsERP.persistence.PersonnelDAO">
   
   <resultMap id="perCodeMap" type="com.project.UsERP.vo.PerCodeVO">
         <id     property="per_code"   column="per_code" />  
         <result property="per_code_name" column="per_code_name" />
         <result property="per_use_state"  column="per_use_state" />
       <association property="perCodeGroup" javaType="com.project.UsERP.vo.PerCodeGroupVO">
         <id      property="pcg_code"   column="pcg_code" />  
         <result property="pcg_name" column="pcg_name" />
         <result property="pcg_use_state"  column="pcg_use_state" />
       </association> 
    </resultMap> 
   
   <!-- 인사 코드 그룹 조회 -->
   <select id="perCgList" resultType="com.project.UsERP.vo.PerCodeGroupVO">
      SELECT * FROM per_code_group ORDER BY pcg_code
   </select>
   
   <!-- 인사 코드 조회 -->
   <select id="perCList" resultMap="perCodeMap">
      SELECT * FROM per_code ORDER BY per_code 
   </select>
   
   <!-- 부서 조회 -->
   <select id="depList" resultType="com.project.UsERP.vo.DepartmentVO">
      SELECT * FROM department ORDER BY dep_code
   </select>
   
   
      
</mapper>   