<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.project.UsERP.persistence.PurchasingDAO">

	<!-- 기초 등록 구매 거래처 목록 -->
	<select id = "purchasingCompanySelect" resultType = "com.project.UsERP.vo.CompanyVO">
		select * from company where comp_use_state = 1
	</select>
	
	<!-- 기초 등록 상품 목록 -->
	<select id = "purchasingProductSelect" resultType = "com.project.UsERP.vo.ProductVO">
		select * from product
	</select>
	
	<!-- 구매,승인내역 -->
   <select id = "buyList" resultType = "com.project.UsERP.vo.BuyVO">
      select * from buy ORDER BY buy_code
   </select>
   
</mapper>